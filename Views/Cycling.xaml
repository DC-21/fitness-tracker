<Page x:Class="Fit.Views.Cycling"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:local="clr-namespace:Fit.Views"
    mc:Ignorable="d"
      Title="Cycling">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- For Topbar -->
            <RowDefinition Height="*"/>
            <!-- For main content -->
        </Grid.RowDefinitions>

        <local:Topbar Grid.Row="0" />
        <!-- Place the Topbar in the first row -->

        <TextBlock Text="Welcome to the Swimming View!" 
                   FontSize="24" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Center" 
                   Grid.Row="1"/>
        <!-- Place the TextBlock in the second row -->
    </Grid>
</Page>
